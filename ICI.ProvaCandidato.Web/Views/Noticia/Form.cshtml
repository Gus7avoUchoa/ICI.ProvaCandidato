@model ICI.ProvaCandidato.Negocio.DTOs.NoticiaDto

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<div>
    <h1>@ViewData["Title"]</h1>
    <br />

    <form method="post">
        <div class="form-group">
            <label asp-for="Titulo">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Texto">Texto</label>
            <textarea asp-for="Texto" class="form-control"></textarea>
            <span asp-validation-for="Texto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TagIds">Tags</label>
            <select asp-for="TagIds" asp-items="ViewBag.Tags" multiple="multiple" class="form-control"></select>
            <span asp-validation-for="TagIds" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Usuario">Usuário</label>
            <input asp-for="UsuarioId" type="number" class="form-control" />
            <span asp-validation-for="Usuario" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        <button type="button" class="btn btn-secondary" onclick="ClearForm()">Limpar</button>
    </form>
</div>

<script>
    function ClearForm() {
        document.getElementById("Titulo").value = "";
        document.getElementById("Texto").value = "";
        document.getElementById("Usuario").value = "";
        document.getElementById("UsuarioId").value = "";
    }
</script>
