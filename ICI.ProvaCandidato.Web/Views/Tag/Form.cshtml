@model ICI.ProvaCandidato.Negocio.DTOs.TagDto

<div>
    <h1>@ViewData["Title"]</h1>
    <br />

    <form method="post">
        <div class="form-group">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        <button type="button" class="btn btn-secondary" onclick="ClearForm()">Limpar</button>
    </form>
</div>

<script>
    function ClearForm() {
        document.getElementById("Descricao").value = "";
    }
</script>